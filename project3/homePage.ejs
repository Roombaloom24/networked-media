                                <div class="signs">
                                    <% if (sun2 && moon2 && rising2) { %>
                                        <div><%= sun2 %></div>
                                        <div><%= moon2 %></div>
                                        <div><%= rising2 %></div>
                                    <% } %>
                                </div>

                                <% if (eyes2 && hair2 && age2) { %>
                                    <div class="looks">
                                        <div class="hair"><%= hair2 %></div>
                                        <div class="eyes"><%= eyes2 %></div>
                                        <div class="age"><%= age2 %></div>
                                    </div>
                                <% } %>

                                <div class="love-hate">
                                    <%= love2 %>
                                    <br><br>
                                    <%= hate2 %>
                                </div>
                            </a>
                        </div>
                    </div>

                    <!-- Person 3 -->
                    <div class="id" id="id-right">
