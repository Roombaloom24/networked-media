                                <% } %>

                                <div class="love-hate">
                                    <%= love3 %>
                                    <br><br>
                                    <%= hate3 %>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
