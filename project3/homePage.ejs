<html>
    <head>
        <title>'wtf'</title>
        <link rel="stylesheet" href="style.css">
        <%- include('fonts.ejs') %>
    </head>
    <body>
        <div class="umbrellaDiv">
            <%- include('static.ejs') %>
            <div class="mediaPage">
                <img class="roadPic" src="road.png" alt="road">
                <img class="roadWalkPic" src="roadwalk.png" alt="roadwPeople">
                <img class="signPic" src="sign.png" alt="sign">
                <img class="carPic" src="car.png" alt="car">

                <div class="mediaColumns">
                    <!-- Person 1 -->
                    <div class="id" id="id-left">
                        <div class="id-border">
                            <a href="/person1">
                                <img class="id-template" src="id.png" alt="id">
                                <% if (img) { %>
                                    <img class="idPic" src="/<%= img %>" alt="User uploaded media">
                                <% } %>

                                <div class="name">
                                    <% if (name && lastName) { %>
                                        <div><b><%= name %></b></div>
                                        <div><b><%= lastName %></b></div>
                                    <% } %>
                                </div>

                                <div class="signs">
                                    <% if (sun && moon && rising) { %>
                                        <div><%= sun %></div>
                                        <div><%= moon %></div>
                                        <div><%= rising %></div>
                                    <% } %>
                                </div>

                                <% if (eyes && hair && age) { %>
                                    <div class="looks">
                                        <div class="hair"><%= hair %></div>
                                        <div class="eyes"><%= eyes %></div>
                                        <div class="age"><%= age %></div>
                                    </div>
                                <% } %>

                                <div class="love-hate">
                                    <%= love %>
                                    <br><br>
                                    <%= hate %>
                                </div>
                            </a>
                        </div>
                    </div>

                    <!-- Person 2 -->
                    <div class="id" id="id-middle">
                        <div class="id-border">
                            <a href="/person2">
                                <img class="id-template" src="id.png" alt="id">
